<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Inside2Fragment">

    <!-- Modern Glass Header Container -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Modern header with menu, title, and search -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:paddingBottom="12dp">

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/simple_button_background"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu"
                android:tint="@color/text_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yoga Asanas"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:textAlignment="center"
                android:letterSpacing="-0.02"
                android:layout_marginHorizontal="16dp" />

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/simple_button_background"
                android:src="@drawable/ic_search"
                android:contentDescription="Search"
                android:tint="@color/text_primary" />

        </LinearLayout>

        <!-- Modern Glass Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                    android:background="@drawable/search_background_rounded"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:tint="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Search asanas or categories..."
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:inputType="text"
                    android:maxLines="1" />

            </LinearLayout>

        </LinearLayout>

        <!-- Modern Glass Filter Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingHorizontal="20dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- All (Active) -->
                <TextView
                    android:id="@+id/tab_all"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:background="@drawable/inactive_filter_background"
                    android:text="All"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Beginner -->
                <TextView
                    android:id="@+id/tab_beginner"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:background="@drawable/inactive_filter_background"
                    android:text="ðŸŒ± Beginner"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Intermediate -->
                <TextView
                    android:id="@+id/tab_intermediate"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:background="@drawable/inactive_filter_background"
                    android:text="ðŸŒ¿ Intermediate"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Advanced -->
                <TextView
                    android:id="@+id/tab_advanced"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:background="@drawable/inactive_filter_background"
                    android:text="Advanced"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Restorative -->
                <TextView
                    android:id="@+id/tab_restorative"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:background="@drawable/inactive_filter_background"
                    android:text="ðŸŒ™ Restorative"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Modern Main Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/background_color"
        app:layout_constraintBottom_toTopOf="@+id/footer_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_container">

        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Modern Popular Asanas Title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popular Asanas"
                    android:textColor="@color/text_primary"
                    android:textSize="28sp"
                    android:fontFamily="@font/inter_bold"
                    android:textStyle="bold"
                    android:letterSpacing="-0.02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Modern Asana List with Glass Cards -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_asana_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Footer Navigation -->
    <LinearLayout
        android:id="@+id/footer_container"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@drawable/footer_background_inside1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_home"
                    android:tint="@color/text_secondary"
                    android:contentDescription="Home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium" />

            </LinearLayout>

            <!-- Explore -->
            <LinearLayout
                android:id="@+id/btn_explore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_search"
                    android:tint="@color/primary_color"
                    android:contentDescription="Explore" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore"
                    android:textColor="@color/primary_color"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium" />

            </LinearLayout>

            <!-- AI -->
            <LinearLayout
                android:id="@+id/btn_ai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_ai"
                    android:tint="@color/text_secondary"
                    android:contentDescription="AI" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium" />

            </LinearLayout>

            <!-- Progress -->
            <LinearLayout
                android:id="@+id/btn_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_bar_chart"
                    android:tint="@color/text_secondary"
                    android:contentDescription="Progress" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/btn_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="4dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_person"
                    android:tint="@color/text_secondary"
                    android:contentDescription="Profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
