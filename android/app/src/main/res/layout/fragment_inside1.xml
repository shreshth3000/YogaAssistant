<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Inside1Fragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/footer_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Modern Header with Glassmorphism -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/amelia_avatar"
                        android:scaleType="centerCrop"
                        android:background="@drawable/avatar_background"
                        android:padding="2dp"
                        android:clipToOutline="true"
                        android:adjustViewBounds="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi, Amelia"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome Back"
                            android:textColor="@color/text_primary"
                            android:textSize="28sp"
                            android:fontFamily="@font/inter_bold"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_notifications"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/simple_button_background"
                    android:src="@drawable/ic_notifications"
                    android:contentDescription="Notifications"
                    android:tint="@color/text_primary" />

            </LinearLayout>

            <!-- Modern Glass Wellness Score Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/neumorphic_card_background"
                android:padding="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAILY WELLNESS SCORE"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_medium"
                    android:textStyle="bold"
                    android:letterSpacing="0.15" />

                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circular_progress_bg"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circular_progress_fill"
                        android:scaleType="fitCenter" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85"
                            android:textColor="@color/primary_600"
                            android:textSize="52sp"
                            android:fontFamily="@font/inter_bold"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/100"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_medium" />

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You're doing great! Keep up the consistent practice."
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:maxWidth="240dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <!-- Stats Cards Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="20dp">

                <!-- Day Streak Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/neumorphic_card_background"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tv_day_streak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textColor="@color/primary_color"
                        android:textSize="24sp"
                        android:fontFamily="@font/inter_bold"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day Streak"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Sessions Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/neumorphic_card_background"
                    android:layout_marginHorizontal="4dp">

                    <TextView
                        android:id="@+id/tv_sessions_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/primary_color"
                        android:textSize="24sp"
                        android:fontFamily="@font/inter_bold"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sessions"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- This Week Timing Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/neumorphic_card_background"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/tv_week_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5h"
                        android:textColor="@color/primary_color"
                        android:textSize="24sp"
                        android:fontFamily="@font/inter_bold"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This Week"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Modern Start Yoga Session Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_session"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/neumorphic_button_primary"
                android:text="Start Yoga Session"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:gravity="center"
                android:stateListAnimator="@null"
                app:icon="@drawable/ic_play_circle"
                app:iconGravity="textStart"
                app:iconSize="28dp"
                app:iconPadding="12dp"
                app:cornerRadius="24dp"
                android:elevation="8dp" />

            <!-- Modern Recommended Section -->
            <LinearLayout
                android:id="@+id/recommendations_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommended For You"
                        android:textColor="@color/text_primary"
                        android:textSize="24sp"
                        android:fontFamily="@font/inter_bold"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- First Row of Recommendations -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="12dp">

                    <!-- First Recommendation Card -->
                    <LinearLayout
                        android:id="@+id/card_recommendation1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/neumorphic_card_background"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/recommendation_placeholder"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_image_background"
                            android:minHeight="120dp"
                            android:maxHeight="120dp"
                            android:adjustViewBounds="true"
                            android:clipToOutline="true" />

                        <TextView
                            android:id="@+id/tv_recommendation1_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_semibold"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:id="@+id/tv_recommendation1_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15 min"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:fontFamily="@font/inter_medium" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Second Recommendation Card -->
                    <LinearLayout
                        android:id="@+id/card_recommendation2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/neumorphic_card_background"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/recommendation_placeholder"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_image_background"
                            android:minHeight="120dp"
                            android:maxHeight="120dp"
                            android:adjustViewBounds="true"
                            android:clipToOutline="true" />

                        <TextView
                            android:id="@+id/tv_recommendation2_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_semibold"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:id="@+id/tv_recommendation2_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20 min"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:fontFamily="@font/inter_medium" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Second Row of Recommendations -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="20dp">

                    <!-- Third Recommendation -->
                    <LinearLayout
                        android:id="@+id/card_recommendation3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/neumorphic_card_background"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/recommendation_placeholder"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_image_background"
                            android:minHeight="120dp"
                            android:maxHeight="120dp"
                            android:adjustViewBounds="true"
                            android:clipToOutline="true" />

                        <TextView
                            android:id="@+id/tv_recommendation3_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_semibold"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_recommendation3_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25 min"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_regular" />

                    </LinearLayout>

                    <!-- Fourth Recommendation -->
                    <LinearLayout
                        android:id="@+id/card_recommendation4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/neumorphic_card_background"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/recommendation_placeholder"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_image_background"
                            android:minHeight="120dp"
                            android:maxHeight="120dp"
                            android:adjustViewBounds="true"
                            android:clipToOutline="true" />

                        <TextView
                            android:id="@+id/tv_recommendation4_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_semibold"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_recommendation4_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 min"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_regular" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChatbot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Open AI Chatbot"
        android:src="@drawable/ic_chat"
        app:backgroundTint="@color/primary_600"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@id/footer_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

    <!-- Modern Glass Footer Navigation -->
    <LinearLayout
        android:id="@+id/footer_container"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@drawable/footer_background_inside1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp">

            <!-- Home (Active) -->
            <LinearLayout
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_home"
                    android:tint="@color/primary_600"
                    android:contentDescription="Home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/primary_600"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_bold"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Explore -->
            <LinearLayout
                android:id="@+id/btn_explore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_search"
                    android:tint="@color/text_secondary"
                    android:contentDescription="Explore" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- AI -->
            <LinearLayout
                android:id="@+id/btn_ai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_ai"
                    android:tint="@color/text_secondary"
                    android:contentDescription="AI" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Progress -->
            <LinearLayout
                android:id="@+id/btn_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_bar_chart"
                    android:tint="@color/text_secondary"
                    android:contentDescription="Progress" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/btn_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_person"
                    android:tint="@color/text_secondary"
                    android:contentDescription="Profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
