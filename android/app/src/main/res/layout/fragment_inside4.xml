<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_50"
    tools:context=".Inside4Fragment">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@drawable/header_background_inside4"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/circular_button_background_inside4"
            android:scaleType="centerInside"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Progress"
            android:textSize="18sp"
            android:textColor="@color/neutral_900"
            android:fontFamily="@font/inter_bold"
            android:gravity="center" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/footer_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="96dp">

        <!-- Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="36dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sophia_avatar"
                android:scaleType="centerCrop"
                android:background="@drawable/avatar_background_inside4"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sophia"
                    android:textSize="20sp"
                    android:textColor="@color/neutral_900"
                    android:fontFamily="@font/inter_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yoga Enthusiast"
                    android:textSize="16sp"
                    android:textColor="@color/primary_700"
                    android:fontFamily="@font/inter_regular" />
            </LinearLayout>
        </LinearLayout>

        <!-- Weekly Summary Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="36dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Summary"
                android:textColor="@color/neutral_900"
                android:textSize="20sp"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/summary_card_background"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Workouts"
                            android:textColor="@color/neutral_800"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_medium" />

                        <TextView
                            android:id="@+id/tv_workout_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textColor="@color/neutral_900"
                            android:textSize="36sp"
                            android:fontFamily="@font/inter_bold"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This Week"
                            android:textColor="@color/primary_700"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_medium" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_upward"
                                android:tint="@color/success_500"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15%"
                                android:textColor="@color/success_500"
                                android:textSize="14sp"
                                android:fontFamily="@font/inter_medium"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Additional Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                    <!-- Total Time -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_total_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3h 45m"
                            android:textColor="@color/primary_600"
                            android:textSize="18sp"
                            android:fontFamily="@font/inter_bold"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Time"
                            android:textColor="@color/neutral_700"
                            android:textSize="12sp"
                            android:fontFamily="@font/inter_medium" />

                    </LinearLayout>

                    <!-- Calories -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,240"
                            android:textColor="@color/primary_600"
                            android:textSize="18sp"
                            android:fontFamily="@font/inter_bold"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calories"
                            android:textColor="@color/neutral_700"
                            android:textSize="12sp"
                            android:fontFamily="@font/inter_medium" />

                    </LinearLayout>

                    <!-- Avg Duration -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_avg_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="32m"
                            android:textColor="@color/primary_600"
                            android:textSize="18sp"
                            android:fontFamily="@font/inter_bold"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg Duration"
                            android:textColor="@color/neutral_700"
                            android:textSize="12sp"
                            android:fontFamily="@font/inter_medium" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Weekly Chart -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="horizontal"
                    android:gravity="bottom|center_horizontal"
                    android:layout_marginTop="16dp">

                    <!-- Monday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/chart_bar_80"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mon"
                            android:textSize="12sp"
                            android:textColor="@color/primary_700"
                            android:fontFamily="@font/inter_medium" />
                    </LinearLayout>

                    <!-- Tuesday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/chart_bar_50"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tue"
                            android:textSize="12sp"
                            android:textColor="@color/primary_700"
                            android:fontFamily="@font/inter_medium" />
                    </LinearLayout>

                    <!-- Wednesday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/chart_bar_60"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wed"
                            android:textSize="12sp"
                            android:textColor="@color/primary_700"
                            android:fontFamily="@font/inter_bold" />
                    </LinearLayout>

                    <!-- Thursday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/chart_bar_80"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thu"
                            android:textSize="12sp"
                            android:textColor="@color/primary_700"
                            android:fontFamily="@font/inter_medium" />
                    </LinearLayout>

                    <!-- Friday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/chart_bar_60"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fri"
                            android:textSize="12sp"
                            android:textColor="@color/primary_700"
                            android:fontFamily="@font/inter_medium" />
                    </LinearLayout>

                    <!-- Saturday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/chart_bar_80"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sat"
                            android:textSize="12sp"
                            android:textColor="@color/primary_700"
                            android:fontFamily="@font/inter_medium" />
                    </LinearLayout>

                    <!-- Sunday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/chart_bar_50"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sun"
                            android:textSize="12sp"
                            android:textColor="@color/primary_700"
                            android:fontFamily="@font/inter_medium" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Streaks Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="36dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Streaks"
                android:textSize="20sp"
                android:textColor="@color/neutral_900"
                android:fontFamily="@font/inter_bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Current Streak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="@drawable/streak_card_background"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tv_current_streak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textSize="48sp"
                        android:textColor="@color/primary_600"
                        android:fontFamily="@font/inter_bold"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 Days"
                        android:textSize="18sp"
                        android:textColor="@color/neutral_900"
                        android:fontFamily="@font/inter_bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Streak"
                        android:textSize="14sp"
                        android:textColor="@color/primary_700"
                        android:fontFamily="@font/inter_regular" />
                </LinearLayout>

                <!-- Longest Streak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="@drawable/streak_card_background"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/tv_longest_streak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21"
                        android:textSize="48sp"
                        android:textColor="@color/primary_600"
                        android:fontFamily="@font/inter_bold"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21 Days"
                        android:textSize="18sp"
                        android:textColor="@color/neutral_900"
                        android:fontFamily="@font/inter_bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Longest Streak"
                        android:textSize="14sp"
                        android:textColor="@color/primary_700"
                        android:fontFamily="@font/inter_regular" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Goals Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goals"
                android:textSize="20sp"
                android:textColor="@color/neutral_900"
                android:fontFamily="@font/inter_bold"
                android:layout_marginBottom="16dp" />

            <!-- Weekly Workouts Goal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/goal_card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Weekly Workouts"
                        android:textSize="16sp"
                        android:textColor="@color/neutral_800"
                        android:fontFamily="@font/inter_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 / 4"
                        android:textSize="14sp"
                        android:textColor="@color/primary_700"
                        android:fontFamily="@font/inter_medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/progress_bar_background" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="0.75"
                        android:background="@drawable/progress_bar_fill_75" />
                </LinearLayout>
            </LinearLayout>

            <!-- Flexibility Score Goal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/goal_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Flexibility Score"
                        android:textSize="16sp"
                        android:textColor="@color/neutral_800"
                        android:fontFamily="@font/inter_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textSize="14sp"
                        android:textColor="@color/primary_700"
                        android:fontFamily="@font/inter_medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/progress_bar_background" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/progress_bar_fill_50" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <!-- Footer Navigation -->
    <LinearLayout
        android:id="@+id/footer_container"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="vertical"
        android:background="@drawable/footer_background_inside1"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_home"
                    android:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="12sp"
                    android:textColor="@color/primary_700"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Explore -->
            <LinearLayout
                android:id="@+id/btn_explore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_search"
                    android:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore"
                    android:textSize="12sp"
                    android:textColor="@color/primary_700"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- AI -->
            <LinearLayout
                android:id="@+id/btn_ai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_ai"
                    android:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI"
                    android:textSize="12sp"
                    android:textColor="@color/primary_700"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Progress (Active) -->
            <LinearLayout
                android:id="@+id/btn_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_bar_chart"
                    android:tint="@color/primary_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textSize="12sp"
                    android:textColor="@color/primary_color"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/btn_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_person"
                    android:tint="@color/text_secondary" />

                <TextView
